<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShareVcamFragment"
    android:background="#FFFFFF"
    android:clickable="true">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="ОБЩИЙ ДОСТУП"
        android:id="@+id/tvGeneralAccess"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#EFEFF4"
        android:textColor="#6D6D72"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:text="user@domain.com"
        android:id="@+id/tvOwnerEmail"
        android:layout_below="@+id/tvGeneralAccess"
        android:layout_alignParentStart="true"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:text="Владелец"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/tvOwnerEmail"
        android:layout_alignParentEnd="true"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:textColor="#6D6D72"
        android:textSize="17dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#EFEFF4"
        android:baselineAligned="true"
        android:id="@+id/linearLayout2"
        android:layout_above="@+id/btAddShareUser"
        android:layout_alignEnd="@+id/textView3"></LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:text="Добавить"
        android:id="@+id/btAddShareUser"
        android:textColor="#0076FF"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView3" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvOwnerEmail"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignEnd="@+id/textView3">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvSharedUsers" />
    </LinearLayout>

</RelativeLayout>
